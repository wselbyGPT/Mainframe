//ASMSEQ  JOB  (001),'ASM SEQ HELLO',
//             CLASS=A,MSGCLASS=A,MSGLEVEL=(1,1),REGION=128K
//HELLO   EXEC ASMFCLG,PARM.ASM='OBJECT,NODECK,LIST,NOXREF'
//ASM.SYSUT1 DD UNIT=SYSDA
//ASM.SYSUT2 DD UNIT=SYSDA
//ASM.SYSUT3 DD UNIT=SYSDA
//ASM.SYSGO  DD UNIT=SYSDA
//* --- THIS IS THE DATASET YOUR PROGRAM WRITES TO ---------------------
//GO.OUTFILE DD  DSN=ASM.HELLO.OUT,
//             DISP=(NEW,CATLG,DELETE),
//             UNIT=SYSDA,
//             SPACE=(TRK,(1,1)),
//             DCB=(RECFM=FB,LRECL=80,BLKSIZE=800)
//GO.SYSPRINT DD SYSOUT=A
//ASM.SYSIN  DD *
HELLO    CSECT
         USING HELLO,15
         SAVE  (14,12)
         LR    12,15
         USING HELLO,12

* OPEN THE SEQUENTIAL DATASET FOR OUTPUT
         OPEN  (OUTDCB,(OUTPUT))

* WRITE ONE 80-BYTE RECORD
         PUT   OUTDCB,MSG

* CLOSE THE DATASET
         CLOSE OUTDCB

* NORMAL RETURN
         RETURN (14,12),RC=0

MSG      DC    CL80'HELLO FROM ASM, WRITTEN TO A SEQUENTIAL DATASET'
OUTDCB   DCB   DDNAME=OUTFILE,DSORG=PS,MACRF=PM,RECFM=FB,LRECL=80,BLKSIZE=800
         END   HELLO
